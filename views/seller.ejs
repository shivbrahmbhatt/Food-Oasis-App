      <button class="btn fw-bold btn-success rounded-pill" onclick="addMarker()">Add Marker</button>
    </div>
 
    <div style="padding-top: 10px; padding-bottom: 20px;"><a class="btn btn-dark" href="/customermap">Customer Map</a></div>
