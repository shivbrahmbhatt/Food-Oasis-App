    </div>
    </section>
    <script>
        const txt1 = document.getElementById('store');
        const btn1 = document.getElementById('btn1');
        const out1 = document.getElementById('output');

        function fun1(){
            out1.innerHTML = txt1.value;

        }

        btn1.addEventListener('click', fun1);
    </script>
    <script>
      // Create a new Google Map centered on a default location
      const map = new google.maps.Map(document.getElementById("map"), {
        center: { lat:33.753746, lng: -84.386330 },
        zoom: 10,

      });

      
      // Create a function to add a marker to the map
      function addMarker() {
        // Get the address entered by the user
        const address = document.getElementById("address").value;
        
        // Use the Google Maps Geocoding API to get the coordinates for the address
        const geocoder = new google.maps.Geocoder();
        geocoder.geocode({ address: address }, (results, status) => {
          if (status === "OK") {
            // Create a new marker at the coordinates returned by the geocoder
            const marker = new google.maps.Marker({
              position: results[0].geometry.location,
              map: map,
              icon: './public/assets/images/here.png'
            });
          } else {
            alert("Geocode was not successful for the following reason: " + status);
          }
        });
        
      }
    </script>
